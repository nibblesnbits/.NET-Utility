
@model RJ.MVC.Models.ContactUsViewModel
@{
    
    ViewBag.Title = "Contact Us Form";
    
}
<h3>@ViewBag.Title</h3>
@using(Html.BeginForm("ContactUs","ContactUs",FormMethod.Post))
{
    <div class="container">
        <div class="form-group">
            @Html.LabelFor(m => m.FirstName, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.LastName, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Phone, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
        </div>
        <input type="submit" class="btn btn-primary" value="Submit" />
        <input type="submit" class="btn btn-primary" data-dissmiss="modal" value="Cancel" id="cancelbtn"/>
    </div>
    
}